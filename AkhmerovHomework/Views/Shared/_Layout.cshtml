<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" asp-append-version="true">

    <environment include="Development">
        <link href="~/css/prettyPhoto.css" rel="stylesheet">
        <link href="~/css/price-range.css" rel="stylesheet">
        <link href="~/css/animate.css" rel="stylesheet">
        <link href="~/css/typography.css" rel="stylesheet">
        <link href="~/css/main.css" rel="stylesheet">
        <link href="~/css/responsive.css" rel="stylesheet">
    </environment>

    <environment exclude="Development">
        <link href="~/css/typography.min.css" rel="stylesheet" asp-append-version="true">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <!--Секция для отображения кастомных стилей, если понадобятся-->
    @RenderSection("styles", false)
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
    <![endif]-->
</head>
<body>
    @await Html.PartialAsync("_Header")

    <div class="container">
        @RenderBody()
    </div>

    @await Html.PartialAsync("_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>

    <environment include="Development">
        <script src="~/js/jquery.scrollUp.min.js"></script>
        <script src="~/js/price-range.js"></script>
        <script src="~/js/jquery.prettyPhoto.js"></script>
        <script src="~/js/main.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/js/jquery.scrollUp.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <!--Секция для отображения кастомных скриптов, если понадобятся-->
    @RenderSection("scripts", false)
</body>
</html>
